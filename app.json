      "supabaseUrl": "https://jjjgagtqjvewqjczkbrg.supabase.co",
      "supabaseAnonKey": "sb_publishable_0s65ODf_HF1arkzA8BTY0g_GdKKwjM0"
    },
    "plugins": [
      "expo-font"
    ]
